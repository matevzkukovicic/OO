<h1>{{title}}</h1>
<div class="mapdiv" style="  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 40%;">
    {{{map}}}
    {{log 'Izbrana regija je' regija}}

</div>
{{#if regionName}}
<div class="modal show d-block" id="newModal" data-toggle="modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>izbrana regija: {{regionName}}</p>
                <p>aktivno število okužb: {{activeCases}}</p>
                <p>število potrjenih okužb do sedaj: {{confirmedToDate}}</p>
                <p>število umrlih do sedaj: {{deceasedToDate}}</p>
            </div>
            <div class="modal-footer">
                <a href="/"><button type="button" class="btn btn-secondary">Close</button></a>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
</div>
{{/if}}