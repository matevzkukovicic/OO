    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
            integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
    <style>
        .modal-header{
            height:30%;
            background: #E5E5E5;
            padding: 0px;
            border-bottom: none;
        }
		.naslov{
			margin-left:5%;
			margin-top: 2%;
			margin-bottom: 3%;
			font-family: Repro_bold;
			font-style: normal;
			font-weight: normal;
			font-size: 56px;
			line-height: 80px;

			color: #000000;
		}
		.faza{
            margin-left: 5vw;
            margin-right: 5vw;
			height: 120px;
			width: 90vw;
			border: 2px solid black;
			border-radius: 1rem;
			display: flex;
			flex-wrap: wrap;
			color: black;
			font-family: Repro_screen;
		}
    </style>
</head>
<div class="bcg">
<div>
    <div class="modal-content"  style="
        background:#f4f4f4;">
        <div class="modal-header" style="
            background:#f4f4f4;">
            <h5 style="font-family:Repro_screen;
                font-size: 56px;
                font-style: normal;
                font-weight: 700;
                line-height: 80px;
                letter-spacing: 0em;
                text-align: left;
                margin:5vh 5vw 0px 5vw"
            >Novice</h5>
            <a href="/map" id="iks" style="margin:5vh 5vw 0px 5vw">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="padding: 0px">
                    <span aria-hidden="true" style="font-size: 50px">&times;</span>
                </button>
            </a>
        </div>
    <div class="modal-body" id="text" style="font-family: Repro_screen;
        font-size: 38px;
        font-style: normal;
        font-weight: 400;
        line-height: 54px;
        letter-spacing: 0em;
        text-align: left;
        margin:3% 5% 0% 5%;
        ">
		<div class="container">
			{{#noviceText}}
            <div class="mb-5" style="border: 3px solid #000000;">
			<a href="{{href}}" style="text-decoration: none; margin:2%; font-family: Repro_screen; color:black">
				<h5 style="font-size: 12px; margin:2%">{{datum}}</h5>
				<h1 style="font-size: 26px; margin:0% 2% 2% 2%">{{naslov}}</h1>
			</a>
            </div>
			{{/noviceText}}
		</div>
    </div>
    </div>
</div>
</div>
<script>
	document.getElementsByTagName("body")[0].setAttribute("style", "background-color: #E5E5E5; padding: 0px")
    if(window.innerWidth<576){
        document.getElementsByTagName("body")[0].setAttribute("style", "background: #E5E5E5; padding:0%")
        document.getElementsByTagName("h5")[0].setAttribute("style", "font-family:Repro_screen;" +
                "font-size: 38px;font-style: normal;font-weight: 700; line-height: 54,49px;" +
                "letter-spacing: 0em;text-align: left;margin:2vh 3vw 25vh 5.5vw")
        document.getElementById("text").setAttribute("style", "font-family: Repro_screen;font-size: 18px;" +
                "font-style: normal;font-weight: 400;line-height: 26px;letter-spacing: 0em;" +
                "text-align: left;margin:3% 5% 0% 5%;")
        document.getElementById("iks").setAttribute("style", "margin:5vh 6vw 25vh 5vw")
    }
</script>
